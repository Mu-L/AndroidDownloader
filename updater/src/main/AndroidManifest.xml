<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chiclaim.android.updater">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />


    <application
        android:allowBackup="true"
        android:supportsRtl="true">

        <activity android:name="com.chiclaim.android.updater.UpgradeDialogActivity"
            android:theme="@style/UpgradeTransparentDialogStyle"/>

        <activity android:name="com.chiclaim.android.updater.UpgradePermissionDialogActivity"
            android:theme="@style/UpgradeTransparentDialogStyle"/>


        <receiver
            android:name="com.chiclaim.android.updater.SystemDownloadReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_NOTIFICATION_CLICKED" />
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE" />
            </intent-filter>
        </receiver>


        <provider
            android:name="com.chiclaim.android.updater.DownloadFileProvider"
            android:authorities="${applicationId}${authoritiesSuffix}"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/download_file_paths" />
        </provider>


    </application>

</manifest>